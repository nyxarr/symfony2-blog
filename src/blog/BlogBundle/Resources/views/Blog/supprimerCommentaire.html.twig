{# src/blog/BlogBundle/Resources/views/Blog/supprimer.html.twig #}

{% extends "BlogBundle::layout.html.twig" %}

{% block title %}
  Supprimer un commentaire - {{ parent() }}
{% endblock %}

{% block blog_body %}

  <h2>Supprimer un commentaire</h2>

  <p>
    Etes-vous certain de vouloir supprimer le commentaire suivant ?
  </p>
  <div class="well">
    {{ commentaire.contenu|markdown }}
  </div>

  {# On met l'id de l'article dans la route de l'action du formulaire #}
  <form action="{{ path('blog_supprimer_commentaire', {'id': commentaire.id}) }}" method="post">
    <a href="{{ path('blog_voir', {'slug': commentaire.article.slug}) }}" class="btn">
      <i class="icon-chevron-left"></i>
      Retour Ã  l'article
    </a>
    <input type="submit" value="Supprimer" class="btn btn-danger" />
    {{ form_rest(form) }}
  </form>

{% endblock %}
